# JAWARA-NET ENVIRONMENT VARIABLES
# ================================
# 
# Copy file ini ke .env.local dan isi dengan nilai yang sesuai.
# Variabel dengan prefix NEXT_PUBLIC_ akan ter-expose ke client-side.

# ===================
# APPLICATION SETTINGS
# ===================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Jawara-Net
NEXT_PUBLIC_APP_VERSION=1.0.0
PORT=3000

# ===================
# API CONFIGURATION
# ===================
NEXT_PUBLIC_API_URL=http://localhost:3000
API_SECRET_KEY=your-secret-key-here
API_TIMEOUT=5000
API_RETRIES=3

# ===================
# EXTERNAL SERVICES
# ===================
# WhatsApp Business API
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=6281234567890

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===================
# ANALYTICS & MONITORING
# ===================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your-sentry-dsn
HOTJAR_ID=your-hotjar-id

# ===================
# SECURITY
# ===================
JWT_SECRET=your-jwt-secret-here
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000
ENCRYPTION_KEY=your-32-character-encryption-key

# ===================
# DATABASE (Optional)
# ===================
DATABASE_URL=postgresql://user:password@localhost:5432/jawara_net
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=jawara_net
DATABASE_USER=your-db-user
DATABASE_PASSWORD=your-db-password

# ===================
# SONARQUBE CONFIGURATION
# ===================
SONAR_TOKEN=your_sonar_token_here
SONAR_HOST_URL=http://localhost:9000
# SONAR_ORGANIZATION=your_org_name  # uncomment for SonarCloud

# ===================
# FEATURE FLAGS (Optional)
# ===================
NEXT_PUBLIC_FEATURE_CHAT=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_TESTIMONIALS=true
